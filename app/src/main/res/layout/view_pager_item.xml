<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_margin="90sp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="level1Listener"
            android:contentDescription="@string/level_one"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="level2Listener"
            android:contentDescription="@string/level_two"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="level3Listener"
            android:contentDescription="@string/level_three"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="level4Listener"
            android:contentDescription="@string/level_four"
            tools:srcCompat="@tools:sample/avatars" />
    </GridLayout>

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:text="Theme"
        android:textSize="32dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>